@model Lanche;

<div class="col-lg-4 col-md-5 mb-lg-2 mb-2">

    <div class="card mb-4">
        <img src=@Model.ImagemUrl class="img-fluid">
        <div class="pt-3">

            <h4>@Model.Nome</h4>
            <p>Time: 15 - 20 minutes | @Model.IsFavorito</p>
            <span> @Model.Preco.ToString("c")  </span>
            <div class="row">
                <div class="col-6 text-end px-2">
                    <i class="fa-sharp fa-solid fa-heart"></i>     
                </div>

                <div class="col-6 px-2 ">
                   <i class="fa-sharp fa-solid fa-cart-plus"></i>
                </div>
            </div>
        </div>

    </div>
</div>